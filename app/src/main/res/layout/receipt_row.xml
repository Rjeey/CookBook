<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <View
            android:id="@+id/viewPicDish"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/mediumGray"
            app:layout_constraintBottom_toBottomOf="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <View
            android:id="@+id/receipt_title"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="@color/mediumGray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/viewPicDish"
            app:layout_constraintTop_toTopOf="parent" />

    <View
            android:id="@+id/receipt_body_text"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginTop="12dp"
            android:background="@color/mediumGray"
            app:layout_constraintEnd_toEndOf="@+id/receipt_title"
            app:layout_constraintStart_toStartOf="@+id/receipt_title"
            app:layout_constraintTop_toBottomOf="@+id/receipt_title" />

    <View
            android:id="@+id/receipt_level"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="95dp"
            android:background="@color/mediumGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/receipt_body_text"
            app:layout_constraintTop_toBottomOf="@+id/receipt_body_text" />

    <View
            android:id="@+id/receipt_time"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="19dp"
            android:background="@color/mediumGray"
            app:layout_constraintStart_toEndOf="@+id/receipt_level"
            app:layout_constraintTop_toTopOf="@+id/receipt_level" />

    <View
            android:id="@+id/receipt_type_text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="19dp"
            app:layout_constraintStart_toEndOf="@+id/receipt_time"
            android:background="@color/mediumGray"
            app:layout_constraintTop_toTopOf="@+id/receipt_time" />
    <View
            android:id="@+id/receipt_date_text"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="80dp"
            app:layout_constraintStart_toEndOf="@+id/viewPicDish"
            android:background="@color/mediumGray"
            app:layout_constraintTop_toTopOf="@+id/receipt_time"

    />


